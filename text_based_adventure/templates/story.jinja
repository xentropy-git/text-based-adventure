
{% extends 'base.jinja' %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4">{{ room.title }}</h1>
    <p class="lead">{{ room.story_text }}</p>

    <form method="post" class="mt-4">
{% csrf_token %}
        <div class="form-group">
            <label for="{{ form.action.id_for_label }}" class="form-label">{{ form.action.label }}</label>
            {{ form.action }}
        </div>
<button type="submit" class="btn btn-primary">Submit Action</button>
    </form>
</div>
{% endblock %}
